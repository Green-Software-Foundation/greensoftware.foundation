---
import { Card } from "@/components/ui/card";
import LinkedInIcon from "@/assets/linkedin-icon.svg";

const teamMembers = [
  {
    memberHeadshot: "/assets/navveen.jpeg",
    name: "Navveen Balani",
    title: "Software Standards Working Group Chair",
    description: "@Accenture",
    link: {
      href: "https://www.linkedin.com/in/naveenbalani/",
      icon: LinkedInIcon,
    },
  },
  {
    memberHeadshot: "/assets/henry.jpeg",
    name: "Henry Richardson",
    title: "Software Standards Working Group Chair",
    description: "@Watt Time",
    link: {
      href: "https://www.linkedin.com/in/henry-richardson/",
      icon: LinkedInIcon,
    },
  },
];
---

<section id="directory" class="relative py-12 md:py-18 lg:py-20">
  <div class="container max-w-2xl">
    <div class="mx-auto mb-6 w-full max-w-lg text-center md:mb-8">
      <h2 class="mb-2 text-2xl font-semibold md:text-3xl lg:text-4xl">Project Leadership</h2>
      <p class="text-sm lg:text-xl">Part of the Software Standards Working Group</p>
    </div>

    <div
      class="grid grid-cols-1 items-start justify-center gap-3 md:grid-cols-2 md:gap-4 lg:grid-cols-2"
    >
      {
        teamMembers.map((member) => (
          <Card className="flex flex-col text-center p-6 h-full justify-between">
            <div class="mb-4 flex items-center justify-center rounded-full overflow-hidden size-24 mx-auto">
              <img src={member.memberHeadshot} class="object-cover " />
            </div>
            <p class="mb-1 text-xl font-bold">{member.name}</p>
            <p class="mb-1 text-sm text-gray-darker">{member.title}</p>
            <p class="text-xs text-gray-darker">{member.description}</p>
            <div class="mt-3 grid grid-flow-col grid-cols-[max-content] gap-3.5 self-center md:mt-4">
              <a href={member.link.href} target="_blank" rel="noopener noreferrer">
                <member.link.icon class="text-primary" />
              </a>
            </div>
          </Card>
        ))
      }
    </div>
  </div>
  <img class="absolute -top-1/2 right-0 -z-10 hidden lg:block" src="/assets/team-decor.svg" />
</section>
