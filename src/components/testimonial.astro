---
interface Props {
  /** The quote text (without surrounding quotation marks â€” they are added automatically) */
  quote?: string;
  /** Name of the person being quoted */
  author?: string;
  /** Job title or role */
  title?: string;
  /** Company or organisation */
  company?: string;
}

const {
  quote = "SCI specification provided a practical methodology to baseline carbon emissions of the application, including embodied emissions and reducing the same.",
  author = "Navveen Balani",
  title = "Managing Director, Chief Technologist",
  company = "Accenture",
} = Astro.props;
---

<section class="py-8 md:py-12 lg:py-16">
  <div class="container">
    <div
      class="relative rounded-4xl border-3 border-accent-lighter px-12 py-12 backdrop-blur-sm md:px-20 md:py-16"
    >
      <div
        class="absolute -top-6 left-1/2 -translate-x-1/2 transform rounded-full bg-accent-lightest-2"
      >
        <img src="/assets/up.svg" class="h-12 w-16 md:h-14 md:w-24" />
      </div>

      <div class="text-center">
        <blockquote
          class="text-lg font-medium text-primary-dark italic md:text-xl"
        >
          &ldquo;{quote}&rdquo;
        </blockquote>
        <div class="mt-8 flex flex-col items-center justify-center gap-2">
          {author && <cite class="not-italic font-bold text-lg">{author}</cite>}
          {title && <span class="text-primary">{title}</span>}
          {company && <span class="font-semibold text-accent-dark">{company}</span>}
        </div>
      </div>

      <div
        class="absolute -bottom-6 left-1/2 -translate-x-1/2 transform rounded-full bg-accent-lightest-2"
      >
        <img src="/assets/down.svg" class="h-12 w-16 md:h-14 md:w-24" />
      </div>
    </div>
  </div>
</section>
