---
import Layout from "@/layouts/showcase.astro";
import { navItems } from "@/lib/nav-items";

// Parameterised components
import Navbar from "@/components/navbar.astro";
import Hero from "@/components/hero.astro";
import LogoMarquee from "@/components/logo-marquee.astro";
import Testimonial from "@/components/testimonial.astro";
import TextBlock from "@/components/text-block.astro";

import TabbedSection from "@/components/tabbed-section.astro";
import FeatureGrid from "@/components/feature-grid.astro";
import CardGrid from "@/components/card-grid.astro";
import StatsGrid from "@/components/stats-grid.astro";
import CommunityReach from "@/components/community-reach.astro";
import ArticleCarousel from "@/components/article-carousel.astro";
import ResourceCards from "@/components/resource-cards.astro";
import CTABanner from "@/components/cta-banner.astro";
import CTACard from "@/components/cta-card.astro";
import Footer from "@/components/footer.astro";
---

<Layout>
  <!-- Section 1: Hero -->
  <Navbar
    logoSrc="/assets/gsf-logo-full.svg"
    logoAlt="Green Software Foundation"
    logoHref="/"
    topBar="none"
    showSearch
    navItems={navItems}
    ctaText="Discuss your challenges"
    ctaHref="/membership/"
  />

  <Hero
    heading="The sustainability challenges you're solving alone?"
    headingAccent="Your peers are solving them together."
    body="The Green Software Foundation is where member organisations — from tech giants to financial institutions — collaborate on the standards, strategies, and solutions that none of them could build alone."
    ctas={[
      { text: "Discuss your challenges with us", variant: "primary" },
    ]}
    imageSrc="/assets/hero-illustration.svg"
    imageAlt="Hero illustration"
    bgClass="bg-accent-lightest-2"
    scrollIndicator
    id="hero"
  />

  <!-- Section 2: Logo Marquee -->
  <LogoMarquee
    heading="Trusted by 60+ organisations including"
    greyscale={false}
    bgClass="bg-white"
    fadeBgClass="from-white"
  />

  <Testimonial
    quote="The Green Software Foundation provides the neutral ground where peers and competitors collaborate on efficiency standards for the benefit of everyone."
    author="Chair Name"
    title="Title, Company"
  />

  <!-- Problem-Solution Section Heading -->
  <TextBlock
    heading="You're not the *first* to face these challenges"
    body="Every organisation's sustainability challenges feel unique. They rarely are. Our members identify the problems affecting the entire industry — then solve them together. The standards, frameworks, and strategies below exist because a member brought us a problem."
    compact
  />

  <!-- Section 4: Organisational Upskilling -->
  <TabbedSection
    badge="ORGANISATIONAL UPSKILLING"
    heading="Your engineers can't deliver on your climate commitments"
    imageSrc="/assets/why-feat-1.svg"
    imageAlt="Education illustration"
    ctaText="Learn more →"
    compact
    tabs={[
      { value: "challenge", heading: "Challenge", description: "IT and infrastructure represent a growing portion of your energy footprint. Your engineering teams lack the specialised training to build in the efficiencies leadership requires. Without a common framework, teams make inconsistent decisions — unable to distinguish genuine emissions reduction from well-intentioned guesswork." },
      { value: "solution", heading: "Solution", description: "The Green Software Practitioner Course — your engineering teams equipped to turn board-level strategy into technical reality. Developed with Microsoft, Accenture, Thoughtworks, and GitHub." },
      { value: "impact", heading: "Impact", description: "Completed by over 130,000 developers globally." },
    ]}
  />

  <!-- Section 5: Measurement & Targets -->
  <TabbedSection
    badge="MEASUREMENT & TARGETS"
    heading="You're reporting emissions but can't set engineering targets"
    imageSrc="/assets/why-feat-2.svg"
    imageAlt="SCI illustration"
    ctaText="Learn more →"
    compact
    tabs={[
      { value: "challenge", heading: "Challenge", description: "GHG reporting gives you compliance but not insight. You report an annual total, but your CTO can't turn that into actionable targets for engineering teams. Cloud migrations, architectural changes, infrastructure investments — they all blur into one number." },
      { value: "solution", heading: "Solution", description: "The Software Carbon Intensity standard (SCI) — an ISO-certified metric that lets you set targets engineers can actually act on. Not an aggregate total. A rate your teams can own and reduce." },
      { value: "impact", heading: "Impact", description: "Amadeus used SCI to set 'reduce carbon intensity by 30%' targets across every software product." },
    ]}
  />

  <!-- Section 6: Scaling Beyond Pilots -->
  <TabbedSection
    badge="SCALING BEYOND PILOTS"
    heading="Your pilots work but nothing scales"
    imageSrc="/assets/why-feat-3.svg"
    imageAlt="SOFT illustration"
    ctaText="Learn more →"
    compact
    tabs={[
      { value: "challenge", heading: "Challenge", description: "You've launched sustainability pilots. You've measured emissions. But initiatives stay trapped in IT — never scaling across procurement, operations, and business units. Your board expects transformation; you're delivering point solutions." },
      { value: "solution", heading: "Solution", description: "The SOFT Playbook — co-chaired by HSBC and Microsoft, developed with Google, Accenture, UBS, and Siemens. Not another measurement tool. The comprehensive framework for embedding green software practices systematically across every function." },
      { value: "impact", heading: "Impact", description: "Co-chaired by HSBC and Microsoft, currently in pilot with steering members." },
    ]}
  />

  <!-- Section 7: AI Carbon Impact -->
  <TabbedSection
    badge="AI CARBON IMPACT"
    heading="AI is your fastest-growing carbon cost and you can't measure it"
    imageSrc="/assets/why-wdpc-feat-1.svg"
    imageAlt="SCI for AI illustration"
    ctaText="Learn more →"
    compact
    tabs={[
      { value: "challenge", heading: "Challenge", description: "Your organisation is deploying AI at scale. When stakeholders ask about the carbon footprint, you have no standardised answer. You're making multi-million dollar infrastructure decisions without understanding their relative carbon efficiency." },
      { value: "solution", heading: "Solution", description: "SCI for AI — extending the proven SCI methodology specifically for artificial intelligence systems. Standardised measurement across training and inference, applicable from LLMs to computer vision. Developed by members including Microsoft, UBS, Google, and Accenture." },
      { value: "impact", heading: "Impact", description: "Standardised measurement framework for AI carbon impact, developed by leading technology organisations." },
    ]}
  />

  <!-- Section 8: Standards Speed -->
  <TabbedSection
    badge="STANDARDS SPEED"
    heading="Standards move too slowly for your regulatory timeline"
    imageSrc="/assets/why-wdpc-feat-3.svg"
    imageAlt="Standards illustration"
    ctaText="Learn more →"
    compact
    tabs={[
      { value: "challenge", heading: "Challenge", description: "Traditional standards development takes years. By the time specifications reach certification, regulations have evolved and technology has shifted. The bottleneck isn't technical complexity — it's coordination across dozens of stakeholders with competing priorities." },
      { value: "solution", heading: "Solution", description: "AI-accelerated consensus. GSF achieved ISO certification for SCI in under 3 years — unprecedented. Now applying AI to synthesise perspectives from hundreds of participants in days, not months." },
      { value: "impact", heading: "Impact", description: "ISO certification in under 3 years. Proven at Green IO Paris 2025 with 800+ practitioners." },
    ]}
  />

  <!-- Section 9: First CTA -->
  <CTACard
    heading="Discuss your challenges with us"
    body="Every member's journey starts with a conversation about what you're trying to solve."
    ctaText="Request a discussion"
    imageSrc="/assets/ready.svg"
    imageAlt="Discussion illustration"
  />

  <!-- Section 10: Community & Reach -->
  <CommunityReach
    heading="Our *Reach*"
    body="A global community of practitioners, leaders, and organisations driving sustainable software forward."
    imageSrc="/assets/world-map-placeholder.svg"
    imageAlt="Global meetup locations"
    stats={[
      { value: "130,000+", label: "Green Software Practitioner course completions" },
      { value: "12,000", label: "LinkedIn followers" },
      { value: "12,000", label: "Global meetup community members" },
      { value: "450,000", label: "Podcast downloads" },
      { value: "7,800+", label: "Newsletter subscribers" },
    ]}
    ctaText="Learn more about our community engagement"
    ctaHref="#"
  />

  <!-- Section 11: What We Do -->
  <FeatureGrid
    heading="What we *do*"
    body="Four functions. Each one driven by member needs. Each one producing results the industry adopts."
    variant="bordered"
    columns={2}
    features={[
      { icon: "/assets/standardized-icon.svg", title: "Standards", description: "Setting the benchmarks the industry measures against. Our members develop vendor-neutral specifications — from SCI to SOFT — through a collaborative process that's achieved ISO certification in record time.", linkText: "Explore our standards →", linkHref: "#" },
      { icon: "/assets/co2-icon.svg", title: "Policy", description: "Translating technical reality into regulatory language. Our policy working group tracks emerging legislation, publishes position papers, and gives members a voice before regulations are finalised.", linkText: "See our policy work →", linkHref: "#" },
      { icon: "/assets/renewable-icon.svg", title: "Education", description: "Building capability at every level. From the free Green Software Practitioner course (130,000+ completions) to advanced certification and cohort programmes — the learning journey that turns commitments into competence.", linkText: "Start learning →", linkHref: "#" },
      { icon: "/assets/realtime-icon.svg", title: "Research", description: "The evidence behind every decision. White papers, technical reports, and the State of Green Software — giving members and the industry the data to make the case internally and externally.", linkText: "Read our research →", linkHref: "#" },
    ]}
  />

  <!-- Section 12: Where To Go Next -->
  <ResourceCards
    heading="Where to *go next*"
    cards={[
      { icon: "/assets/shape-icon-1.svg", title: "Leading sustainability strategy?", description: "See our impact, explore membership, governance & leadership.", ctaText: "Explore membership", ctaHref: "#" },
      { icon: "/assets/shape-icon-2.svg", title: "Implementing in your engineering team?", description: "Education journey, standards & tools, Green Software Patterns.", ctaText: "Start the journey", ctaHref: "#" },
      { icon: "/assets/shape-icon-3.svg", title: "Want to contribute?", description: "Member playbook, working groups, community.", ctaText: "Get involved", ctaHref: "#" },
    ]}
  />

  <!-- Section 13: Featured Content -->
  <ArticleCarousel
    heading="Featured Content"
    body="Stories, research, and insights from our members and community."
    articles={[
      { title: "How Accenture Implemented the SCI Specification", organizations: [{ name: "Accenture", logoSrc: "/assets/logos/accenture.png" }], imageSrc: "/assets/hero-illustration.svg", description: "Accenture applied SCI to calculate and track carbon emissions for an internal reference application, establishing a practical baseline methodology.", href: "#", cta: "Read the story →" },
      { title: "Baselining Software Carbon Emissions", organizations: [{ name: "UBS", logoSrc: "/assets/logos/ubs.png" }], imageSrc: "/assets/hero-illustration.svg", description: "UBS demonstrates applying SCI to baseline carbon emissions for two enterprise applications in investment banking and asset management.", href: "#", cta: "Read the story →" },
      { title: "Decarbonizing Software with SCI", organizations: [{ name: "CAST Software" }], imageSrc: "/assets/hero-illustration.svg", description: "CAST integrated SCI with CAST Highlight to decarbonize an enterprise application, achieving an estimated 400 kg annual CO2 reduction.", href: "#", cta: "Read the story →" },
      { title: "Carbon-Aware Computing at Scale", organizations: [{ name: "UBS", logoSrc: "/assets/logos/ubs.png" }, { name: "Microsoft", logoSrc: "/assets/logos/microsoft.webp" }], imageSrc: "/assets/hero-illustration.svg", description: "UBS and Microsoft implemented the first enterprise-scale carbon-aware computing system, using SCI and the Carbon Aware SDK.", href: "#", cta: "Read the story →" },
    ]}
  />

  <!-- Section 14: Final CTA -->
  <CTABanner
    heading="Discuss your challenges with us"
    ctaText="Request a discussion"
  />

  <Footer
    sections={[
      {
        title: "Our Work",
        links: [
          { href: "#", text: "SCI Specification" },
          { href: "#", text: "SOFT Framework" },
          { href: "#", text: "Green Software Practitioner" },
          { href: "#", text: "SCI for AI" },
          { href: "#", text: "Carbon Aware SDK" },
        ],
      },
      {
        title: "About",
        links: [
          { href: "#", text: "Our Mission" },
          { href: "#", text: "Governance" },
          { href: "#", text: "Team" },
          { href: "#", text: "Blog" },
          { href: "#", text: "Press" },
        ],
      },
      {
        title: "Join",
        links: [
          { href: "#", text: "Become a Member" },
          { href: "#", text: "Member Directory" },
          { href: "#", text: "Newsletter" },
          { href: "#", text: "Events" },
        ],
      },
      {
        title: "Contact",
        type: "contact",
        socialLinks: [
          { href: "https://github.com/Green-Software-Foundation", icon: "github", label: "GitHub" },
          { href: "https://www.linkedin.com/company/green-software-foundation/", icon: "linkedin", label: "LinkedIn" },
          { href: "mailto:help@greensoftware.foundation", icon: "email", label: "Email" },
        ],
      },
    ]}
  />
</Layout>
